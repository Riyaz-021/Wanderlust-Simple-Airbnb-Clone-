<% layout('/layouts/boilerplate') -%>

<div id="filters">
  <div class="filter">
    <a href="/listings" class="filter">
      <div>
        <i class="fa-solid fa-fire"></i>
      </div>
      <p>Trending</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=rooms" class="filter">
      <div>
        <i class="fa-solid fa-bed"></i>
      </div>
      <p>Rooms</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=villa" class="filter">
      <div>
        <i class="fa-solid fa-mountain-city"></i>
      </div>
      <p>Villa</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=mountains" class="filter">
      <div>
        <i class="fa-solid fa-mountain"></i>
      </div>
      <p>Mountains</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=historic" class="filter">
      <div>
        <i class="fa-brands fa-fort-awesome"></i>
      </div>
      <p>Historic</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=pools" class="filter">
      <div>
        <i class="fa-solid fa-person-swimming"></i>
      </div>
      <p>Amazing Pools</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=camping" class="filter">
      <div>
        <i class="fa-solid fa-campground"></i>
      </div>
      <p>Camping</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=resort" class="filter">
      <div>
        <i class="fa-solid fa-hotel"></i>
      </div>
      <p>Resort</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=beach" class="filter">
      <div>
        <i class="fa-solid fa-umbrella-beach"></i>
      </div>
      <p>Beach</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=arctic" class="filter">
      <div>
        <i class="fa-regular fa-snowflake"></i>
      </div>
      <p>Arctic</p></a
    >
  </div>
  <div class="filter">
    <a href="/listings?category=boats" class="filter">
      <div>
        <i class="fa-solid fa-sailboat"></i>
      </div>
      <p>Boats</p></a
    >
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if (listings.length > 0) { %> <% for (listing of listings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %> <% } else { %>
  <h5>No results found for the selected country.</h5>
  <% } %>
</div>
